@model Lifty_WebApp.DataAccess.Entities.AboutDataModel

@{
    ViewData["Title"] = "Главная";
}

<div id="resources" class="home-intro content">
    <div class="home-content-container1">
        <div class="home-intro-text1">
            <h1 class="home-heading10 Section-Heading highlight">Лифты</h1>
            <span class="home-text10 Section-Text subtitle">
                @Model.Description
            </span>
            <a class="home-cta-btn1 Anchor btn-outline custom-bg-col highlight" href="#inspiration">Узнать больше</a>
        </div>
    </div>
</div>

<div id="inspiration" class="info-box content">
    <div class="home-heading-container1">
        <h1 class="home-text11 Section-Heading highlight">О Компании</h1>
        <span class="home-text12 Section-Text subtitle">
            @Model.Description
        </span>
    </div>
    <div class="home-cards-container1">
        @foreach (var achvmnt in Model.Achievements)
        {
            <div class="home-features-card1">
                <div class="home-icon-container1">
                    <svg viewBox="0 0 1024 1024" class="home-icon14">
                        <path d="M533.333 234.667c-11.776 0-21.333 9.557-21.333 21.333s9.557 21.333 21.333 21.333c46.208 0 83.797 37.589 83.797 83.797 0 11.776 9.557 21.333 21.333 21.333s21.333-9.557 21.333-21.333c0-69.717-56.747-126.464-126.464-126.464z"></path>
