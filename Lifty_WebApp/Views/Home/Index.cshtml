                    </svg>
                </div>
                <div class="home-text-container1">
                    <span class="home-text13 Card-Text highlight">
                        @achvmnt
                    </span>
                </div>
            </div>
        }
    </div>
</div>

<div id="process" class="info-box content">
    <div class="home-heading-container2">
        <h1 class="home-text19 Section-Heading highlight">Каталог</h1>
    </div>
    <div class="home-cards-container2">
        @foreach (var item in ViewBag.CatalogDemo)
        {
            <div class="info-box-service-card1">
                <h3 class="home-text20 Card-Heading highlight">@item.Name</h3>
                <span class="home-text21 Card-Text subtitle">
                    @item.Description
                </span>
                <span class="Anchor text-dark-emphasis">Подробнее</span>
            </div>
        }
    </div>
</div>

<div class="info-box">
    <h1 class="home-text11 Section-Heading highlight">Предлагаемые услуги:</h1>
    <div class="home-cards-container2">
        @foreach (var sTxt in Model.Services)
        {
            <div id="resources" class="home-intro content">
                <div class="home-content-container2">
                    <div class="home-intro-text2">
                        <h1 class="home-heading17 Section-Heading highlight">@sTxt</h1>
                        <span class="home-text26 Section-Text subtitle">
                            @sTxt
                        </span>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div id="resources" class="home-map custom-bg-col">
    <div class="my-3 text-light">
        <ul class="nav text-center">
            <li class="nav-item subtitle">
                @ViewBag.ContactsData.Email
            </li>
            <li class="nav-item mx-5">
                |
            </li>
            <li class="nav-item subtitle">
                @ViewBag.ContactsData.Number
            </li>
            <li class="nav-item mx-5">
                |
            </li>
            <li class="nav-item subtitle">
                @ViewBag.ContactsData.Address
            </li>
            <li class="nav-item mx-5">
                |
            </li>
            <li class="nav-item subtitle">
                Пн-Пт 8:00-18:00
            </li>
        </ul>
    </div>
    <div class="home-content-container6">
        <iframe src="@ViewBag.ContactsData.YandexMapLink" frameborder="0" class="home-yandex-maps"></iframe>
    </div>
</div>

