@model Lifty_WebApp.DataAccess.Entities.ContactsModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "ADMIN - Контакты";
}

<div class="my-2">
    <div class="me-auto d-flex">
        <h1 class="mx-auto">Контакты</h1>
    </div>
</div>

<div class="container">
    <form asp-action="Contacts" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row mb-3">
            <div class="col-md-5 col-md-auto mx-auto">
                <div class="form-group">
                    <label asp-for="Email" class="control-label">Email адрес</label>
                    <input maxlength="30" asp-for="Email" class="form-control" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Number" class="control-label">Контактный номер</label>
                    <input type="tel" maxlength="30" asp-for="Number" class="form-control" required />
                    <span asp-validation-for="Number" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label">Адрес</label>
                    <input maxlength="30" asp-for="Address" class="form-control" required />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="YandexMapLink" class="control-label">Ссылка из <a href="https://yandex.ru/map-constructor/">конструктора карт</a></label>
                    <input maxlength="100" asp-for="YandexMapLink" class="form-control" required />
                    <span asp-validation-for="YandexMapLink" class="text-danger"></span>
                </div>

                <div class="my-3 text-center">
                    <input type="submit" value="Сохранить" class="btn text-success mx-1" />
                </div>
            </div>
        </div>
    </form>
</div>

<div id="resources" class="home-map bg-primary">
    <div class="my-3 text-light">
        <ul class="nav text-center">
            <li class="nav-item">
                @Model.Email
            </li>
            <li class="nav-item mx-5">
                |
            </li>
            <li class="nav-item">
                @Model.Number
            </li>
            <li class="nav-item mx-5">
                |
            </li>
            <li class="nav-item">
                @Model.Address
            </li>
        </ul>
    </div>
    <div class="home-content-container6">
        <iframe src="@Model.YandexMapLink" frameborder="0" class="home-yandex-maps"></iframe>
    </div>
</div>

<div class="mt-3 mb-5 px-3 text-center">
    <h3>Где найти ссылку для карты?</h3>
    <h5><a href="https://yandex.ru/map-constructor/">yandex.ru/map-constructor/</a></h5>
    <img class="mx-2 my-2" style="width: 40%; height:40%" src="~/img/design/guide1.png" />
    <br />
    <img class="mx-2 my-2" style="width: 40%; height:40%" src="~/img/design/guide2.png" />
    <br />
    <img class="mx-2 my-2" style="width: 30%; height:30%" src="~/img/design/guide3.png" />
    <br />
    <img class="mx-2 my-2" style="width: 100%; height:70%" src="~/img/design/guide4.png" />
    <br />
</div>

