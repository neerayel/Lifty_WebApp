@model Lifty_WebApp.DataAccess.Entities.ItemModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "ADMIN - Удаление товара";
}

<div class="">
    <div class="container">
        <div class="my-2">
            <div class="me-auto d-flex">
                <h1 class="me-auto">Подтвердите удаление - @Model.Name</h1>
                <a class="btn text-primary mx-3" href="@Url.Action("ItemDetails", "Admin", new { id = Model.Id })">Назад</a>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <br>
                <dl class="row col-sm-0 mx-auto">
                    <dt class="col-sm-0 text-dark">
                        Название товара
                    </dt>
                    <dd class="col-sm-0 text-primary">
                        @Model.Name
                    </dd>

                    <dt class="col-sm-0 text-dark">
                        Производитель
                    </dt>
                    <dd class="col-sm-0 text-primary">
                        @Model.Brand
                    </dd>

                    <dt class="col-sm-0 text-dark">
                        Способ доставки
                    </dt>
                    <dd class="col-sm-0 text-primary">
                        @Model.Delivery
                    </dd>

                    <dt class="col-sm-0 text-dark">
                        Способ оплаты
                    </dt>
                    <dd class="col-sm-0 text-primary">
                        @Model.Payment
                    </dd>

                    <dt class="col-sm-0 text-dark">
                        Описание
                    </dt>
                    <dd class="col-sm-0 text-primary">
                        @Model.Description
                    </dd>

                    <dt class="col-sm-0 text-dark">
                        Характеристики
                    </dt>
                    <dd class="col-sm-0 text-primary">
                        <table class="form-group mb-2 d-flex">
                            @for (int i = 0; i < Model.StatParameters.Count; i++)
                            {
                                <tr>
                                    <th>
                                        <p class="text-primary">@Model.StatParameters[i]</p>
                                    </th>
                                    <th>
                                        <p class="text-primary">@Model.StatValues[i]</p>
                                    </th>
                                </tr>
                            }
                        </table>
                    </dd>

                    <dt class="col-sm-0 text-dark">
                        Фотографии/изображения
                    </dt>
                    <dd class="col-sm-0">
                        @foreach (var image in Model.ImgPath)
                        {
                            <div class="my-2">
                                <img id="loadedImg" class="img-thumbnail mb-2" height="200" width="200" src="@image" />
                            </div>
                        }
                    </dd>
                </dl>
                <br>
            </div>

            <form asp-action="DeleteItem" class="mx-1">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Удалить" class="btn btn-outline-danger" />
            </form>
        </div>
    </div>
</div>

